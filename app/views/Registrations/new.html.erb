<h1> Sign up! </h1>

<%= form_with model: @user, url: sign_up_path do |form| %>
   <%= render "./layouts/partials/form_errors", form: form %> 
    <div class="mb-3">
        <%= form.label :email %>
        <%= form.text_field :email, class: "form-control", placeholder: "example@some.com"  %>
    </div>
    <div class="mb-3">
        <%= form.label :password %>
        <%= form.password_field :password, class: "form-control", placeholder: "SuperStr0ngP4$$!" %>
    </div>
    <div class="mb-3">
        <%= form.label :password_confirmation %>
        <%= form.password_field :password_confirmation, class: "form-control",placeholder: "SuperStr0ngP4$$!" %>
    </div> 
    <div class="mb-3">
        <%= form.submit "Sign up", class: "btn btn-primary"%>
    </div>
<% end %>
<h1> Edit Password! </h1>

<%= form_with model: Current.user, url: edit_password_path do |form| %>
    <%= render "./layouts/partials/form_errors", form: form %> 
    
    <div class="mb-3">
        <%= form.label :password %>
        <%= form.password_field :password, class: "form-control", placeholder: "SuperStr0ngP4$$!" %>
    </div>
    <div class="mb-3">
        <%= form.label :password_confirmation %>
        <%= form.password_field :password_confirmation, class: "form-control",placeholder: "SuperStr0ngP4$$!" %>
    </div> 
    <div class="mb-3">
        <%= form.submit "Update password", class: "btn btn-primary"%>
    </div>
<% end %>